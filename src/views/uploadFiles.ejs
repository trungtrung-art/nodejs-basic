<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NodeJS Basic</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="topnav">
    <a class="active" href="#home">Home</a>
    <a href="#upload">Upload files</a>
  </div>

  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Action</th>
    </tr>
    <% for(let i=0; i < dataUser.length; i++) { %>
      <tr>
        <td>
          <%= dataUser[i].firstName %>
        </td>
        <td>
          <%= dataUser[i].lastName %>
        </td>
        <td>
          <%= dataUser[i].email %>
        </td>
        <td>
          <%= dataUser[i].address %>
        </td>
        <td>
          <a href='/detail/user/<%= dataUser[i].id %>'>detail</a>
          <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
            <button type="submit">edit</button>
          </form>
          <form action='/delete/user/<%= dataUser[i].id %>' method='POST'>
            <button type='submit'>delete</button>
          </form>
          

        </td>
      </tr>
      <% } %>

  </table>

  <div>
    <div class="create-user-container">
      <div><b>Create a new user</b></div>
      <form action="/create-new-user" method="POST">
        <div>
          <label for="firstName">FirstName:</label>
          <input name="firstName" type="text" />
        </div>
        <div>
          <label for="lastName">LastName:</label>
          <input name="lastName" type="text" />
        </div>
        <div>
          <label for="email">Email:</label>
          <input name="email" type="email" />
        </div>
        <div>
          <label for="address">Address:</label>
          <input name="address" type="text" />
        </div>
        <div>
          <button class="btn-submit" type="submit">Submit</button>
        </div>
      </form>

    </div>
  </div>

</body>

</html>