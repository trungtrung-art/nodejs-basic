</head>

<body>
  <div class="topnav">
    <a class="active" href="#home">Home</a>
    <a href="#news">News</a>
    <a href="#contact">Contact</a>
    <a href="#about">About</a>
  </div>

  <%= dataUser %>

    <table>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
      <% for(let i=0; i < dataUser.length; i++) { %>
        <tr>
          <td>
            <%= dataUser[i].firstName %>
          </td>
          <td>
            <%= dataUser[i].lastName %>
          </td>
          <td>
            <%= dataUser[i].email %>
          </td>
          <td>
            <%= dataUser[i].address %>
          </td>
          <td>
            <a href='/detail/user/<%= dataUser[i].id %>''>detail</a>
            <button>edit</button>
            <button>delete</button>
          </td>
        </tr>
        <% } %>
    </table>

</body>

</html>